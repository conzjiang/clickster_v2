<li class="group">
  <a class="image-block"
     href="#/tv/<%= tv.id %>"
     style="background-image: url(<%= tv.escape("image_url") %>)">
  </a>

  <div class="content">
    <div class="title group">
      <h3><a href="#/tv/<%= tv.id %>"><%= tv.escape("title") %></a></h3>
      <h4><small>Rating</small> <%= tv.get("rating") || "n/a" %></h4>
    </div>

    <p class="blurb"><%= tv.escape("blurb") %></p>
  </div>

  <a href="#/tv/<%= tv.id %>" class="cover"></a>
</li>