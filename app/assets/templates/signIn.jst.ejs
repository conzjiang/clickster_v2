<% if (newUser) { %>
  <% action = '/api/users' %>
  <% text = 'Up' %>
<% } else { %>
  <% text = "In" %>
  <% action = '/api/session' %>
<% } %>

<form class="sign-in" action="<%= action %>" method="post">
  <% if (signedIn) { %>
    <p>You are already signed in!</p>
  <% } else { %>
    <a class='sign-in-link' href="javascript:void(0)">Sign In</a>
    <a class='sign-up-link' href="javascript:void(0)">New User</a>

    <ul class='errors'></ul>

    <% if (newUser) { %>
      <fieldset>
        <label for="user_email">Email</label>
        <input id="user_email" type="email" name="user[email]">
      </fieldset>

      <fieldset>
        <label for="user_username">Username</label>
        <input id="user_username" type="text" name="user[username]">
      </fieldset>
    <% } else { %>
      <fieldset>
        <label for="user_identifier">Username or Email</label>
        <input id="user_identifier" type="text" name="user[identifier]">
      </fieldset>
    <% } %>

    <fieldset>
      <label for="user_password">Password</label>
      <input id="user_password" type="password" name="user[password]">
    </fieldset>

    <button>Sign <%= text %></button>
  <% } %>
</form>
