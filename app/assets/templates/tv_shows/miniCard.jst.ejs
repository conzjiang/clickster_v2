<li class="content">
  <a class="image-block" href="#/tv/<%= tv.id || tv.get("tv_show_id") %>">
    <img src="<%= tv.escape("image_url") %>">
  </a>

  <h3>
    <a href="#/tv/<%= tv.id || tv.get("tv_show_id") %>">
      <%= tv.escape("title") %>
    </a>
  </h3>

  <ul class="status-buttons group ignore"
      data-id="<%= tv.id || tv.get("tv_show_id") %>">
    <li class="favorite"></li>
    <li class="watchlist"></li>
  </ul>
</li>