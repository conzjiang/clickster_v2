<section class="image-block">
  <ul class="image-tiles group">
    <li><div class="cover"></div></li>
    <li><div class="cover"></div></li>
    <li><div class="cover"></div></li>
    <li><div class="cover"></div></li>
  </ul>

  <div class="content">
    <figcaption><%= tv.escape("title") %></figcaption>
    <ul class="genres group">
      <% _(tv.get("genres")).each(function (genre) { %>
        <li>
          <a href="#/genres/<%= Utils.hyphenate(genre) %>"><%= genre %></a>
        </li>
      <% }) %>
    </ul>
  </div>

  <% if (isAdmin) { %>
    <a class="admin-edit" href="#/tv/<%= tv.id %>/edit">Edit</a>
  <% } %>
</section>

<section class="options">
  <ul class="group">
    <li class="button watchlist">Add to Watchlist</li>
    <li class="button favorite">Favorite</li>

    <% _(Clickster.LIST_STATUSES).each(function (status) { %>
      <li class="list" data-option="<%= status %>">
        <strong></strong>
        <%= status %>
      </li>
    <% }) %>
  </ul>
</section>

<span class="warning">You must be logged in to do that!</span>

<section class="tv-info group">
  <div class="wrapper">
    <p class="blurb"><%= tv.escape("blurb") %></p>

    <article class="stats">
      <label>Stats</label>
      <ul class="info">
        <li>
          <%= tv.get("status") %>
        </li>

        <li>
          <strong>on</strong> <%= tv.escape("network") || "n/a" %>
        </li>

        <li>
          <strong>for</strong>
          <%= Utils.pluralize(tv.get("num_seasons"), "season") %>
        </li>

        <% var endYear = tv.get("end_year") %>
        <% if (!endYear) endYear = "present" %>
        <li>
          <strong>from</strong> <%= tv.get("start_year") %> - <%= endYear %>
        </li>
      </ul>

      <aside>
        <label>IMDb Rating</label> <%= tv.get("rating") %>
      </aside>
    </article>
  </div>
</section>