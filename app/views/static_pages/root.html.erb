<section class="sidebar"></section>
<main>
  <nav>
    <ul class="links group">
      <li>
        <button id="open-sidebar"><span class="antenna"></span></button>
      </li>

      <li>
        <button id="open-dropdown">&#128526;</button>
      </li>
    </ul>
  </nav>

  <section id="main"></section>
</main>

<section class="modal">
  <div class="overlay"></div>
  <article class="modal-content"></article>
</section>

<script>
  $(function () {
    Clickster.initialize({
      $sidebar: $(".sidebar"),
      $navbar: $("nav > .links"),
      $rootEl: $("#main"),
      $modal: $(".modal-content")
    });

    <% if signed_in? %>
    Clickster.currentUser.fetch();
    <% end %>
  });
</script>

<script id="decades">
  <%= TvDecade.decades_list.to_json.html_safe %>
</script>

<script id="genres">
  <%= TvGenre.genres_list.to_json.html_safe %>
</script>

<script id="statuses">
  <%= TvShow.statuses_list.to_json.html_safe %>
</script>

<script id="tv_shows">
  <%= TvShow.pluck(:title).to_json.html_safe %>
</script>

<script id="users">
  <%= User.pluck(:username).to_json.html_safe %>
</script>
